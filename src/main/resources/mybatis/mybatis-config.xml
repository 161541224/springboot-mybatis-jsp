<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <!--支持数据库驼峰命名-->
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <!--这里给实体类取别名，方便在mapper配置文件中使用-->
    <typeAliases>
        <typeAlias type="com.t87.springboot.pojo.Invitation" alias="Invitation"/>
        <typeAlias type="com.t87.springboot.pojo.ReplyDetail" alias="ReplyDetail"/>
    </typeAliases>

</configuration>